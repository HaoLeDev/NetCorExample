@model DemoLogin.Data.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<button data-target="#myModal" data-toggle="modal" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm mới</button>
<!--Modal popup-->
<div class="modal fade active" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-header">
            <button class="close" data-dismiss="modal">x</button>
            <h4 id="title">Thêm mới nhân viên</h4>
        </div>
        <div class="modal-body">
            <input type="hidden" id="Id" />
            <div class="row">
                <div class="col-lg-4">
                    <label for="EmCode">Mã nhân viên</label>
                </div>
                <div class="col-lg-8">
                    <input type="text" class="form-control" id="EmCode" placeholder="Nhập mã nhân viên" data-validate="required" />
                </div>
            </div>
            <div class="row chucNang">
                <div class="col-sm-4 col-sm-offset-8">
                    <div class="row inline">
                        <div class="btn btn-primary" id="btnUpdate">
                            <i class="fa fa-save"></i> Lưu
                        </div>
                        <div class="btn btn-danger" id="Close" data-dismiss="modal">
                            <i class="glyphicon glyphicon-remove"></i> Hủy
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End modal popup-->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="De_Id" class="control-label"></label>
                <input asp-for="De_Id" class="form-control" />
                <span asp-validation-for="De_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Em_Code" class="control-label"></label>
                <input asp-for="Em_Code" class="form-control" />
                <span asp-validation-for="Em_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityCardNumber" class="control-label"></label>
                <input asp-for="IdentityCardNumber" class="form-control" />
                <span asp-validation-for="IdentityCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Sex" /> @Html.DisplayNameFor(model => model.Sex)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

